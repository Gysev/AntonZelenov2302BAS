	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Автоматически обновляем CSRF токен из cookie перед каждым запросом",
					"// Spring Security устанавливает токен в cookie XSRF-TOKEN при любом запросе",
					"// Статические заголовки в запросах используют переменную {{csrfToken}}",
					"let csrfToken = pm.cookies.get('XSRF-TOKEN');",
					"",
					"// Если токен найден в cookie, обновляем переменную коллекции",
					"// Это автоматически обновит все статические заголовки X-XSRF-TOKEN в запросах",
					"if (csrfToken) {",
					"    pm.collectionVariables.set('csrfToken', csrfToken);",
					"} else {",
					"    // Если в cookie нет, используем сохраненное значение из переменной",
					"    csrfToken = pm.collectionVariables.get('csrfToken');",
					"    if (!csrfToken) {",
					"        console.log('⚠️ CSRF Token not found. Make a GET request first to get the token.');",
					"    }",
					"}"
				]
			}
		}
