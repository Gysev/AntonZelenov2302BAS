				{
					"name": "GET Get CSRF token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Сохраняем CSRF токен из cookie в переменную коллекции",
									"if (pm.response.code === 200) {",
									"    const csrfCookie = pm.cookies.get('XSRF-TOKEN');",
									"    if (csrfCookie) {",
									"        pm.collectionVariables.set('csrfToken', csrfCookie);",
									"        console.log('✅ CSRF Token saved: ' + csrfCookie);",
									"    } else {",
									"        try {",
									"            var jsonData = pm.response.json();",
									"            if (jsonData.token) {",
									"                pm.collectionVariables.set('csrfToken', jsonData.token);",
									"                console.log('✅ CSRF Token from JSON saved: ' + jsonData.token);",
									"            }",
									"        } catch (e) {",
									"            console.log('⚠️ CSRF Token will be available after next request');",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
